<config>
    <sections>
        <blueclaw_overeighteen translate="label" module="overeighteen">
            <label>Blueclaw Age Check Settings</label>
            <tab>blueclawconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>3800</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>    
                    <fields>
                        <enabled>
                            <label>Enable Age Check:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <validate>validate-digits</validate>                       
                        </enabled>
                        
                        <header>
                            <label>Pop Up Header:</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>                                            
                        </header>
                        <message>
                            <label>Pop Up Message:</label>
                            <frontend_type>textarea</frontend_type>                            
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>                                            
                        </message>
                        <button>
                            <label>Button Text:</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>                                            
                        </button>
                        
                        <show_underage>
                            <label>Include underage button:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <validate>validate-digits</validate>                       
                        </show_underage>
                        
                        <button_underage>
                            <label>Underage Button Text:</label>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>  
                            <depends><show_underage>1</show_underage></depends>
                        </button_underage>
                        
                        
                        <underage_message>
                            <label>Underage Message:</label>
                            <frontend_type>textarea</frontend_type>                            
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default> 
                            <depends><show_underage>1</show_underage></depends>                                 
                        </underage_message>

                    </fields>
                </general>
                
            </groups>
        </blueclaw_overeighteen>
        <blueclaw_master>
            <groups>
                <installedlist>
                    <fields>
                        <Blueclaw_OverEighteen>
                            <label>Blueclaw_OverEighteen</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>blueclawmaster/adminhtml_version</frontend_model>
                            <sort_order>768</sort_order>
                            <show_in_default>1</show_in_default>
                        </Blueclaw_OverEighteen>
                    </fields>
                </installedlist>
            </groups>
         </blueclaw_master>
    </sections>  
</config>