<config>
    <modules>
        <Blueclaw_OverEighteen>
            <version>1.0.0</version>
        </Blueclaw_OverEighteen>
    </modules>
    <global>
        <blocks>
            <overeighteen>
                <class>Blueclaw_OverEighteen_Block</class>
            </overeighteen>
        </blocks>
        <helpers>
            <overeighteen>
                <class>Blueclaw_OverEighteen_Helper</class>
            </overeighteen>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <overeighteen>
                    <file>blueclaw_overeighteen.xml</file>
                </overeighteen>
            </updates>
        </layout>
    </frontend>
    <default>
        <web>
            <age_check>
                <enabled>0</enabled>
                <header><![CDATA[Verify age to continue]]></header>
                <message><![CDATA[To use this website you must be aged 18 years or over. Please verify your age before entering the site.]]></message>
                <button><![CDATA[I am over 18]]></button>
                <show_underage>0</show_underage>
                <button_underage><![CDATA[I am under 18]]></button_underage>
                <underage_message><![CDATA[You must be over 18 years of age to use this website.]]></underage_message>
            </age_check>
        </web>
    </default>
</config>
    